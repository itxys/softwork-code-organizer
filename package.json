{
  "name": "softreg-materials-tool",
  "version": "0.1.0",
  "description": "Generate software copyright registration materials (program/document identification)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "docx": "^8.5.0",
    "electron-store": "^8.2.0"
  },
  "build": {
    "appId": "com.houxiaohou.softregtool",
    "productName": "软著鉴别材料生成器",
    "files": [
      "src/**/*",
      "package.json",
      "build/icon.ico",
      "build/icon.png"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "portable"
      ],
      "signAndEditExecutable": false,
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png"
    }
  }
}
